rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Colección de productos - Lectura pública, escritura autenticada
    match /products/{productId} {
      allow read: if true;  // Permitir lectura pública para el catálogo
      allow write: if request.auth != null && request.auth.token.role in ['admin', 'root'];
    }
    
    // Colección de categorías - Lectura pública, escritura autenticada
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.role in ['admin', 'root'];
    }
    
    // Colección de usuarios - Solo lectura/escritura autenticada
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || request.auth.token.role in ['admin', 'root']);
      allow write: if request.auth != null && request.auth.token.role in ['admin', 'root'];
    }
    
    // Colección de órdenes - Solo lectura/escritura autenticada
    match /orders/{orderId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Todas las demás colecciones - Solo autenticados
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
